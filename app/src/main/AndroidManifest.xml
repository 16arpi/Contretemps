<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pigeoff.contretemps">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".CTApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_ct"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_ct_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".activities.IntentActivity"
                  android:theme="@style/Theme.Invisible"
                  android:excludeFromRecents="true"
                  android:noHistory="true"
                  >
            <intent-filter>
                <data
                        android:host="www.contretemps.eu"
                        android:scheme="http"/>

                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <data
                        android:host="www.contretemps.eu"
                        android:scheme="https"/>

                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.PostActivity"
                android:configChanges="orientation|screenSize|keyboardHidden">

        </activity>
        <activity
                android:name=".activities.MainActivity"
                android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>